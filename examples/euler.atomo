problem-1: max :=
  (0 ... max)
    (filter: { n | 3 divides?: n || 5 divides?: n })
    sum

problem-2: max :=
  { sum = 0

    n0 = 0
    n1 = 1

    while: { n1 < max } do: {
      when: n1 even?
        do: { sum = sum + n1 }

      n1 = n1 + n0
      n0 = n1 - n0
    }

    sum
  } call
    
(problem-1: 1000) print
(problem-2: 4000000) print
